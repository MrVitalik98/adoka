
<div class="jumbotron">
    <h4 class="text-center">Edit Course</h4>
</div>

{{#if error}}
  <div class="alert bg-danger w-75 mx-auto my-4 text-center text-light alert-dismissible">
    <button class="close" data-dismiss="alert">&times;</button>
    {{error}}
  </div>
{{/if}}

<div class="container">
  <div class="row">
        <form class="col 12s" action="/edit/{{course._id}}?edit=true" method="POST">
        <div class="row">
            <div class="input-field col s6">
            <input  id="title" type="text" class="validate" name="title" value="{{course.title}}" required>
            <label for="title">Title</label>
            <span class="helper-text" data-error="wrong" data-success="right">Course title</span>
            </div>
        
            <div class="input-field col s6">
            <input id="price" type="number" min="1" class="validate" name="price" value="{{course.price}}" required>
            <label for="price">Price</label>
            <span class="helper-text" data-error="wrong" data-success="right">Course price</span>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
            <input id="url" type="url" class="validate" name="image" value="{{course.image}}" required>
            <label for="url">Url Image</label>
            <span class="helper-text" data-error="wrong" data-success="right">Course logo</span>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea" name="text">{{course.text}}</textarea>
            <label for="textarea1">Textarea</label>
            <span class="helper-text" data-error="wrong" data-success="right">Course body</span>
            </div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn green waves-effect float-right my-2" type="submit">Edit</button>
        </form>
  </div>
</div>
