<div class="registerPage">
    <div class="row">
        <div class="container col-md-6 col-12">
            <h3 class="fa fa-home">
                <a href="/"> Home</a>
            </h3>
            
            <h2 class="text-center">Register</h2>

            {{#if error}}
                <div class="alert text-light text-center alert-dismissible bg-danger mx-auto w-75">
                    <button class="close" data-dismiss="alert">&times;</button>
                    {{error}}
                </div>
            {{/if}}

            <form class="form mx-auto w-75 my-4" action="/auth/register" method="POST" novalidate>
                <div class="form-group">
                    <label for="frname">First Name</label>
                    <input type="text" class="form-control" minlength="3" id="frname" name="frname" placeholder="First name" required value="{{data.firstname}}">
                </div>
                <div class="form-group">
                    <label for="lsname">Last Name</label>
                    <input type="text" class="form-control" minlength="3" id="lsname" name="lsname" placeholder="Last name" required value="{{data.lastname}}">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Email" required value="{{data.email}}">
                </div>
                <div class="form-group">
                    <label for="pass">Password</label>
                    <input type="password" class="form-control" minlength="6" id="pass" name="pass" placeholder="Enter password" required>
                </div>
                <div class="form-group">
                    <label for="pass">Confirm</label>
                    <input type="password" class="form-control" minlength="6" id="repass" name="repass" placeholder="Enter the password again" aria-describedby="emailHelp" required>
                    <small id="emailHelp" class="form-text"></small>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
                
                

                <button type="submit" class="btn btn-success float-right">Submit</button>
            </form>
        </div>
        
    </div>

</div>

